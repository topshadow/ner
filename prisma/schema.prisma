datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  // output   = "./generated/prisma-client-js"
}

model Tenant {
  id         String     @id @default(uuid())
  name       String
  created_at DateTime   @default(now())
  ///更新时间
  updated_at DateTime   @default(now())
  RbacUser   RbacUser[]
}

model RbacUser {
  id           String     @id @default(uuid())
  username     String     @unique
  nickname     String?
  avatar       String?
  password     String
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  role_id      String
  tenant_id    String
  tenant       Tenant     @relation(references: [id], fields: [tenant_id])
  role         RbacRole   @relation(references: [id], fields: [role_id])
  ownerStocks  WmsStock[] @relation("ownerStocks")
  createStocks WmsStock[] @relation("createStocks")

  @@index([tenant_id])
  @@index([role_id])
}

model RbacRole {
  id         String     @id @default(uuid())
  name       String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  RbacUser   RbacUser[]
  code       String
}

model WmsProduct {
  id         String     @id @default(uuid())
  name       String
  note       String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  tenant_id  String
  WmsStock   WmsStock[]
}

model WmsStock {
  id             String           @id @default(uuid())
  num            Int              @default(0)
  note           String
  product_id     String
  product        WmsProduct       @relation(references: [id], fields: [product_id])
  tenant_id      String
  origin_num     Int              @default(0)
  create_user_id String
  owner_user_id  String
  created_at     DateTime         @default(now())
  updated_at     DateTime         @updatedAt
  ownerUser      RbacUser         @relation(name: "ownerStocks", references: [id], fields: [owner_user_id])
  createUser     RbacUser         @relation(name: "createStocks", references: [id], fields: [create_user_id])
  details        WmsStockDetail[]

  @@index([owner_user_id])
  @@index([create_user_id])
  @@index([product_id])
}

model WmsStockDetail {
  id       String @id @default(uuid())
  stock_id String

  num Int

  unit           String
  note           String
  create_user_id String
  owner_user_id  String
  image_url      String
  created_at     DateTime
  updated_at     DateTime
  tenant_id      String
  type           String
  stock          WmsStock @relation(references: [id], fields: [stock_id])

  @@index([stock_id])
}
